{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
      },
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": ["error"],
        "no-shadow": "off",
        "no-use-before-define": "off",
        "no-underscore-dangle": "off",
        "no-useless-catch": "off",
        "import/no-extraneous-dependencies": [
        "error",
        { "devDependencies": true }
        ],
        "import/prefer-default-export": 0,
        "no-param-reassign": 0,
        "import/no-cycle": 0,
        "import/order": [
        "error",
        {
            "groups": ["builtin", "external", "internal"]
        }
        ],
        "allowEmptyCatch": "off"
    },
    "settings": {
        "import/resolver": {
          "node": {
            "paths": ["src"],
            "extensions": [".js"]
          }
        }
    }
}
